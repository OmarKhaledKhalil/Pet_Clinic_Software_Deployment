pipeline {
    agent any

    environment {
        TF_DIR = "petclinic-infra/terraform"
        ANSIBLE_DIR = "petclinic-infra/ansible"
        JENKINS_IP = "147.161.245.79"
    }

    stages {
        stage('üì• Checkout Code') {
            steps {
                echo "Checking out code..."
                git url: 'https://github.com/OmarKhaledKhalil/Pet_Clinic_Software_Deployment.git', branch: 'master'
            }
        }

        stage('üîß Terraform Init, Plan & Apply') {
            steps {
                dir("${TF_DIR}") {
                    withCredentials([
                        string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                        string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                    ]) {
                        sh '''
                            echo "üîê Setting AWS credentials"
                            export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                            export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                            export AWS_SESSION_TOKEN=$AWS_SESSION_TOKEN

                            terraform init
                            terraform plan -var="key_pair=jenkins-key" -var="jenkins_host_ip=${JENKINS_IP}" -var="ci_host_ip=${JENKINS_IP}"
                            terraform apply -auto-approve -var="key_pair=jenkins-key" -var="jenkins_host_ip=${JENKINS_IP}" -var="ci_host_ip=${JENKINS_IP}"
                        '''
                    }
                }
            }
        }

        stage('‚è≥ Wait for EC2 Initialization') {
            steps {
                echo "Waiting 100 seconds for EC2 instances to initialize..."
                sleep time: 100, unit: 'SECONDS'
            }
        }

        stage('üìù Generate Ansible Inventory') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    withCredentials([
                        sshUserPrivateKey(credentialsId: 'ansible-ssh-key', keyFileVariable: 'SSH_KEY')
                    ]) {
                        sh '''
                            chmod 400 $SSH_KEY
                            chmod +x generate_inventory.sh
                            ./generate_inventory.sh $SSH_KEY
                        '''
                    }
                }
            }
        }

        stage('üì§ Copy SSH Key to Bastion') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    withCredentials([
                        sshUserPrivateKey(credentialsId: 'ansible-ssh-key', keyFileVariable: 'SSH_KEY')
                    ]) {
                        sh '''
                            BASTION_IP=$(grep -A1 "\\[bastion\\]" inventory/hosts.ini | tail -n1 | awk '{print $1}')

                            echo "üì§ Copying SSH key to bastion ($BASTION_IP)..."
                            scp -o StrictHostKeyChecking=no -i $SSH_KEY $SSH_KEY ec2-user@$BASTION_IP:/home/ec2-user/jenkins-key.pem
                            ssh -i $SSH_KEY ec2-user@$BASTION_IP "chmod 400 /home/ec2-user/jenkins-key.pem"
                        '''
                    }
                }
            }
        }

        stage('üöÄ Run Ansible Playbook') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    withCredentials([
                        sshUserPrivateKey(credentialsId: 'ansible-ssh-key', keyFileVariable: 'SSH_KEY')
                    ]) {
                        sh '''
                            echo "üìÇ Inventory:"
                            cat inventory/hosts.ini

                            MASTER_IP=$(grep -A1 "\\[master\\]" inventory/hosts.ini | tail -n1 | awk '{print $1}')
                            BASTION_IP=$(grep -A1 "\\[bastion\\]" inventory/hosts.ini | tail -n1 | awk '{print $1}')

                            echo "üßπ Cleaning known_hosts"
                            ssh-keygen -R $MASTER_IP || true
                            ssh-keygen -R $BASTION_IP || true

                            echo "üîå Testing SSH via bastion"
                            ssh -A -i $SSH_KEY -o ProxyJump=ec2-user@$BASTION_IP -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null ec2-user@$MASTER_IP 'echo "‚úÖ Connected to master"'

                            echo "üì° Ansible ping check"
                            ansible -i inventory/hosts.ini all -m ping

                            echo "üöÄ Running playbook"
                            ansible-playbook -i inventory/hosts.ini site.yml
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful!"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs."
        }
    }
}
